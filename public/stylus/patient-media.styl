@media screen and (max-width: 1199px)
  //section 1
  .ad
    display: none
  .slider-wrap .slider
    width: 100%

@media screen and (max-width: 991px)
  .container::before
    background:none
  //section 1
  .slider article
    flex-wrap: wrap
    & > *
      width: 100%

  .slide-right
      padding-left: 0

  .slide-right_top
    & .title-time
      margin-top: 4.1%;
    & a h3
      margin-top: 3.8%
    & p
      margin-top: 2.2%;

  .slide-right_bot
    margin-top: 4.5%;
  .articles-horizontal
    & h3
      margin-top: 12px;
  //section 2
  .most-popular, .diet-food, .medicine-treatment, .stomatology
    margin-top: 110px
    & .content
      flex-direction: column-reverse;
      & >*
        width: 100%;
  .article-big
    order: 2
    & article
      & a:last-of-type
        margin-top: 2.3%;
  .articles-vertical
    order: 1
    margin-top: 32px;
    padding-left: 0
    & article:nth-of-type(3)
      margin-bottom: 0;
    & article
      margin-top: 26px;
      margin-bottom: 32px;
      & >div
        width: 71.9%;
        padding-left: 5%;
        & .link-title
          margin-top: 3%;
      & .link-img
        width: 28.1%;

  //section 3
  .video
    margin-top: 99px;
    & .articles-horizontal
      &::before
        top: -47px;
    & .button-block
      margin-top: 23px;
      padding-right: 6.8%;

  //section 4

  //section 5
  .diet-food
    & .button-block
      margin-top: 78px;
      padding-right: 0;
      & .button-line::before
        margin-right: 37px;

  //section 6
  .beauty-health
    margin-top: 142px;
    & .articles-horizontal
      & h3
        margin-top: 16px;
    & .button-block
      margin-top: 58px;
      padding-right: 6.8%;
  //section 7
  .medicine-treatment
    & .button-block
      margin-top: 78px;
      padding-right: 0;
      & .button-line::before
        margin-right: 37px;
  //section 8
  .helpful-tips
    margin-top: 142px;
    & .articles-horizontal
      & h3
        margin-top: 16px;
    & .button-block
      margin-top: 58px;
      padding-right: 6.8%;
  //section 9
  .horoscope-patient
    margin-top: 115px;
    & .hrp
      width: 100%;
      margin: 5.7% 0 0 0;
      & .icons-img
        margin-bottom: 45px;
        & span
          letter-spacing: 2px;
    & .button-block
      margin-top: 25px;
      padding-right: 6.8%;
  //section 10
  .stomatology
    margin-top: 111px;
    & .button-block
      margin-top: 78px;
      padding-right: 0;
      & .button-line::before
        margin-right: 37px;
  //section 10
  .psychology
    margin-top: 143px;

@media screen and (max-width: 767px)
  //section 1
  .slide-right_top
    & .title-time
      & a
        font-size: 10px;
      & a::before
        width: 6px;
        height: 6px;
        margin-right: 7px;
      & time
        font-size: 8px;
        padding: 1px 2px;
    & a h3
      margin-top: 5.4%;
    & h3
      font-size: 19px
    & p
      display : none
  .slide-right_bot
    display : none
  .articles-horizontal
    margin-top: 21px;
    & .title-time
      margin-top: 0;
      margin-bottom: 10px;
      & a
        font-size: 10px;
        letter-spacing: 1px;
      & a::before
        width: 6px;
        height: 6px;
        margin-right: 8px;
      & time
        font-size: 8px;
        padding: 1px 2px;
    & h3
      margin-top: -2px;
      margin-left: 12px;

  //section 2
  .most-popular
    margin-top: 47px;
    & .content
      margin-top: 13px;
  .article-big
    & .title-time
      margin-top: 6.3%;
      & time
        font-size: 8px;
        padding: 2px 5px;
    & h3
      font-size: 19px;
      line-height: 21px;
    & article
      & a:last-of-type
        margin-top: 3.1%;
  .articles-vertical
    margin-top: 21px;
    flex-direction: column-reverse;
    & article
      margin-bottom: 0;
      margin-top: 0;
      padding: 16px 0;
      & h3
        line-height: 15px;
      & .link-img
        width: 26.1%;
      & >div
        width: 73.9%;
        padding-left: 3.4%;
        & .link-title
          margin-top: 2%;
    & .title-time
      & time
        font-size: 8px;
        padding: 2px 3px;

  //section 3
  .video
    & .left-title
      & h2
        color: #FFFFFF
      & .vertical-line
        background: #FFFFFF
    & .articles-horizontal
      & article
        &:nth-of-type(1)::before
          height: 200%;
          top: -23%;
          background: #202020;
        &:nth-of-type(2)::before
          content: '';
          position: absolute;
          width: 150%;
          height: 100%;
          left: -25%;
          background: #202020;
        &:nth-of-type(3)::before
          height: 132%;
          background: #202020;
      & .link-img
        order: 1;
        width: 100%
        padding-bottom: 0;
      & .link-title
        width: 100%
      & .title-time
        margin-top: 8px;
      & h3
        margin-top: 5px;
        margin-bottom: 28px;
    & .horizontal-line
      height: 4px;

  //section 4

